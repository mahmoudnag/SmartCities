                <label asp-for="TwiterUrl" class="control-label"></label>
                <input asp-for="TwiterUrl" class="form-control" />
                <span asp-validation-for="TwiterUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LinkedInUrl" class="control-label"></label>
                <input asp-for="LinkedInUrl" class="form-control" />
                <span asp-validation-for="LinkedInUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FaceBookUr" class="control-label"></label>
                <input asp-for="FaceBookUr" class="form-control" />
                <span asp-validation-for="FaceBookUr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="youtubeUrl" class="control-label"></label>
                <input asp-for="youtubeUrl" class="form-control" />
                <span asp-validation-for="youtubeUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
