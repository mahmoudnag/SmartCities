@model NewVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>New</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Picture" class="control-label"></label>
                <img src="@Model.ImageUrl" id="blah" style="border-radius:50%;height:100px;width:100px" />

                <input asp-for="Picture" type="file" id="files"
                       onchange="document.getElementById('blah').src = window.URL.createObjectURL(this.files[0]);
                                 document.getElementById('blah').style.display='block'"
                       class="form-control" />
                <span asp-validation-for="Picture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="video" class="control-label"></label>
                <video controls style="height:100px;width100px;">
                    <source src="@Model.VideoUrl" type="video/mp4">
                    Your browser does not support the video tag.
                </video>

                <input asp-for="video" type="file" id="files"
                       onchange="document.getElementById('blah').src = window.URL.createObjectURL(this.files[0]);
                                 document.getElementById('blah').style.display='block'"
                       class="form-control" />
                <span asp-validation-for="video" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<script>
    $("#files").change(function () {
        filename = this.files[0].name;

    });

</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
