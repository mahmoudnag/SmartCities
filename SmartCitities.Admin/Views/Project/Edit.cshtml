@using SmartCitities.Admin.StaticF
@model SmartCitities.Admin.ViewModels.ProjectVM

@{
    ViewData["Title"] = "Edit";
   
}

<h1>Edit</h1>

<h4>ProjectVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Statues" class="control-label"></label>
                <select class="form-control" asp-for="Statues">
                    <option value="done">done</option>

                    <option value="working">working</option>

                </select>
                <span asp-validation-for="Statues" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Budget" class="control-label"></label>
                <input asp-for="Budget" class="form-control" />
                <span asp-validation-for="Budget" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Compeletion" class="control-label"></label>
                <input asp-for="Compeletion" class="form-control" />
                <span asp-validation-for="Compeletion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <img src="@Model.ImageUrl" id="blah" style="border-radius:50%;height:100px;width:100px" />

                <input asp-for="Image" type="file" id="files"
                       onchange="document.getElementById('blah').src = window.URL.createObjectURL(this.files[0]);
                                 document.getElementById('blah').style.display='block'"
                       class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select name="teams" class="form-group" id="teams" multiple>
                    @foreach (var item in ViewBag.ItemsList)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<script>
    $("#files").change(function () {
        filename = this.files[0].name;

    });

</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
