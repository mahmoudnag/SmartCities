@using Microsoft.AspNetCore.Identity
@using SmartCities.Core.Models;
@using SmartCitities.Admin
@using SmartCitities.Admin.Models
@using SmartCitities.Admin.ViewModels
@using SmartCitities.Admin.ViewModels.AccountVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@inject SignInManager<AppUser> SignInManager;


<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="apple-touch-icon" sizes="76x76" href="~/img/apple-icon.png">
    <link rel="icon" type="image/png" href="~/img/favicon.png">
    <title>
        Smart citites by Creative Tim
    </title>
    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet" />
    <!-- Nucleo Icons -->
    <link href="~/css/nucleo-icons.css" rel="stylesheet" />
    <link href="~/css/nucleo-svg.css" rel="stylesheet" />
    <!-- Font Awesome Icons -->
    <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
    <link href="~/css/nucleo-svg.css" rel="stylesheet" />
    <!-- CSS Files -->
    <link id="pagestyle" href="~/css/soft-ui-dashboard.css?v=1.0.3" rel="stylesheet" />
</head>

<body class="g-sidenav-show rtl bg-gray-100">


    <div class="container-fluid">
        <div class="row">


            <div class="col-lg-3"  >
                <aside style="z-index:999;background-color:cornflowerblue"  class="sidenav navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-3 fixed-end me-3 rotate-caret" id="sidenav-main">
                    <div class="sidenav-header">
                        <i class="fas fa-times p-3 cursor-pointer text-secondary opacity-5 position-absolute start-0 top-0 d-none d-xl-none" aria-hidden="true" id="iconSidenav"></i>
                        <a class="navbar-brand m-0" href="#">
                           
                            <span class="me-1 font-weight-bold" style="color:darkblue;font-weight:bold"> سمارت سيتيز</span>

                            </a>
                       
                    </div>
                    <hr class="horizontal dark mt-0">
                    <div class="collapse navbar-collapse px-0 w-auto  max-height-vh-100 h-100" id="sidenav-collapse-main">
                        <ul class="navbar-nav">
                            <li class="nav-item">

                                <a class="nav-link" asp-action="Index" asp-controller="Home">



                                    <i class="fas fa-home"></i>
                                    <span class="nav-link-text ms-1">Home</span>
                                </a>

                            </li>
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <li class="nav-item">
                                    <a class="nav-link " asp-controller="Tabels" asp-action="Index">
                                        <i class="fa fa-table" aria-hidden="true"></i>
                                        <span class="nav-link-text me-1">الجداول</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link  " asp-controller="Companies" asp-action="Index">
                                        <i class="fa fa-building-o" aria-hidden="true"></i>
                                        <span class="nav-link-text ms-1">الشركة</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link  " asp-controller="Clients" asp-action="Index">

                                        <i class="fa fa-user" aria-hidden="true"></i>
                                        <span class="nav-link-text ms-1">العملاء</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link  " asp-controller="Products" asp-action="Index">
                                        <i class="fa fa-product-hunt" aria-hidden="true"></i>
                                        <span class="nav-link-text ms-1">المنتجات</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link  " asp-controller="Project" asp-action="Index">
                                        <i class="fas fa-project-diagram"></i>
                                        <span class="nav-link-text ms-1">المشاريع</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link  " asp-controller="Teams" asp-action="Index">

                                        <i class="fa fa-group"></i>
                                        <span class="nav-link-text ms-1">اعضاء التيم</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link  " asp-controller="News" asp-action="Index">
                                        <i class="fa fa-gift" aria-hidden="true"></i>
                                        <span class="nav-link-text ms-1">عروض</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " asp-controller="Home" asp-action="ChangeLanguageToE">

                                        <i class="fa fa-language" aria-hidden="true"></i>
                                        <span class="nav-link-text me-1">لغة انجليزية</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link  " asp-controller="Account" asp-action="SignOut">
                                        <i class="fa fa-sign-out" aria-hidden="true"></i>
                                        <span class="nav-link-text ms-1">تسجيل خروج</span>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link " asp-controller="Home" asp-action="ChangeLanguageToE">
                                        <i class="fa fa-language" aria-hidden="true"></i>
                                        <span class="nav-link-text me-1">لغة انجليزية</span>
                                    </a>
                                </li>
                                @*  Account *@
                                <li class="nav-item mt-3">
                                    <h6 style="color:darkblue;margin-right:20px;" class=ms-2 text-uppercase text-xs font-weight-bolder opacity-6">الحساب</h6>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " asp-action="SignIn" asp-controller="Account">
                                        <i class="fa fa-sign-in" aria-hidden="true"></i>
                                        <span class="nav-link-text me-1">تسجيل الدخول</span>
                                    </a>
                                </li>
                               @*  <li class="nav-item">
                                    <a class="nav-link " asp-action="SignUp" asp-controller="Account">
                                        <i class="fas fa-registered"></i>
                                        <span class="nav-link-text me-1">انشاء حساب  </span>
                                    </a>
                                </li> *@

                            }




                        </ul>
                    </div>
               
                </aside>

            </div>

            <div class="col-lg-9">
                @RenderBody()
            </div>



        </div>


    </div>
    <!--   Core JS Files   -->
    <script src="~/js/core/popper.min.js"></script>
    <script src="~/js/core/bootstrap.min.js"></script>
    <script src="~/js/plugins/perfect-scrollbar.min.js"></script>
    <script src="~/js/plugins/smooth-scrollbar.min.js"></script>
    <script src="~/js/plugins/fullcalendar.min.js"></script>
    <script src="~/js/plugins/chartjs.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script>
        
     
    </script>
    <script src="~/js/plugins/choices.min.js"></script>
 
    <!-- Github buttons -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>
    <!-- Control Center for Soft Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="~/js/soft-ui-dashboard.min.js?v=1.0.3"></script>
   
</body>

</html>