@model ContainerVM
@{
    ViewData["Title"] = "Home Page";
    string imagth = ViewBag.ImagthPath;
   
}
<style>
    .carousel-container {
  display: flex;
  overflow-x: auto;
}
.carousel-slide {
  flex: 1 0 30%;
}
@@media (max-width: 600px) {
  .carousel-slide {
    flex: 1 0 90%;
  }
}
.carousel-container {
  display: flex;
  overflow-x: auto;
  scroll-snap-type: x mandatory;
}
.carousel-slide {
  flex: 1 0 30%;
  scroll-snap-align: center;
}
@@media (max-width: 600px) {
  .carousel-slide {
    flex: 1 0 90%;
  }
}

</style>

@section LeftSide{
    <div class="col-lg-6 align-self-center text-center text-lg-start mb-lg-5">
        <div class="btn btn-sm border rounded-pill text-white px-3 mb-3 animated slideInRight">Smart Citites</div>
        <h1 class="display-4 text-white mb-4 animated slideInRight">Smart Cities for Your Business</h1>
        <p class="text-white mb-4 animated slideInRight">
            @Model.company.vision
        </p>
        <a asp-action="CompanyDetails" class="btn btn-light py-sm-3 px-sm-5 rounded-pill me-3 animated slideInRight">Read More</a>
        <a asp-controller="Contact" asp-action="Index" class="btn btn-outline-light py-sm-3 px-sm-5 rounded-pill animated slideInRight">Contact Us</a>

    </div>
    <div class="col-lg-6 align-self-end text-center text-lg-end">
        <img class="img-fluid" src="@imagth@Model.company.Logo"
             style="width:300px;height:300px;border-radius:  150px 150px 0 0"
        alt="Smart Citites Logo">
    </div>

  
}


<!-- About Start -->
<div class="container-fluid py-5">
    <div class="container">
        <div class="row g-5 align-items-center">
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                <div class="about-img">
                    <img class="img-fluid" src="~/img/samrLogo2.jpg">
                </div>
            </div>
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
                <div  class="btn btn-sm border rounded-pill text-primary px-3 mb-3">About Us</div>
                <h1 class="mb-4">We Make Your Business Smarter </h1>
                <p class="mb-4">
                    @Model.company.Mission
                </p>
                <p class="mb-4">
                   
                </p>
                <div class="row g-3">
                    <div class="col-sm-6">
                        <h6 class="mb-3"><i class="fa fa-check text-primary me-2"></i>Award Winning</h6>
                        <h6 class="mb-0"><i class="fa fa-check text-primary me-2"></i>Professional Staff</h6>
                    </div>
                    <div class="col-sm-6">
                        <h6 class="mb-3"><i class="fa fa-check text-primary me-2"></i>24/7 Support</h6>
                        <h6 class="mb-0"><i class="fa fa-check text-primary me-2"></i>Fair Prices</h6>
                    </div>
                </div>
                <div class="d-flex align-items-center mt-4">
                      
                       
                    
                    <a class="btn btn-primary rounded-pill px-4 me-3" asp-controller="Project" asp-action="ProjectsDetails">Read More</a>
                        <a class="btn btn-outline-primary btn-square me-3" href="@Model.company.FaceBookUr">
<i class="fab fa-facebook-f"></i></a>
                        <a class="btn btn-outline-primary btn-square me-3" href="  @Model.company.TwiterUrl
"><i class="fab fa-twitter">

                    </i></a>
                        <a class="btn btn-outline-primary btn-square me-3" href=" @Model.company.InstagramUrl">
                        <i class="fab fa-instagram"></i></a>
                        <a class="btn btn-outline-primary btn-square" href="@Model.company.LinkedInUrl">
                            <i class="fab fa-linkedin-in"></i></a>
                
                </div>
            </div>
        </div>
    </div>
</div>
<!-- About End -->
<!-- Service Start -->
<div class="container-fluid bg-light mt-5 py-5">
    <div class="container py-5">
        <div class="row g-5 align-items-center">
            <div class="col-lg-5 wow fadeIn" data-wow-delay="0.1s">
                <div class="btn btn-sm border rounded-pill text-primary px-3 mb-3">Our Products</div>
                <h1 class="mb-4">Our Excellent  Solutions for Your Business</h1>
                <p class="mb-4">
                   Smart Models is the best 
                </p>
                <a asp-controller="Service" asp-action="ServiceDetails" class="btn btn-primary rounded-pill px-4">Read More</a>
            </div>
            <div class="col-lg-7">
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="row g-4">
                            @foreach (var product in Model.Products.Take(2))
                            {
                                <div class="case-item col-12 wow fadeIn overflow-hidden rounded mb-2" data-wow-delay="0.1s">
                                    <div class="service-item d-flex flex-column justify-content-center text-center rounded">
                                        <div class="service-icon btn-square">
                                            <img src="@imagth@product.ImageUrl" style="height:100%;position:absolute;  width:100% " />
                                        </div>
                                        <h3 class="mb-3" style="z-index:1">@product.Name</h3>
                                        <p style="z-index:1">
                                            @product.Description.Substring(0, 15)...
                                        </p>
                                        <a style="z-index:1" class="btn px-3 mt-auto mx-auto" asp-controller="Service" asp-action="Details" asp-route-id="@product.Id">Read More</a>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                    <div class="col-md-6 pt-md-4">
                        <div class="row g-4">
                            @foreach (var product in Model.Products.Skip(2))
                            {
                                <div class="case-item col-12 wow fadeIn overflow-hidden rounded mb-2 " data-wow-delay="0.3s">
                                    <div class="service-item d-flex flex-column justify-content-center text-center rounded">
                                        <div class="service-icon btn-square">
                                            <img class="img-fluid" src="@imagth@product.ImageUrl" style="height:100%;position:absolute;  width:100% " />

                                        </div>


                                        <h3 class="mb-3">@product.Name</h3>


                                        <p style="z-index:1">
                                            @product.Description.Substring(0, 15)...
                                        </p>
                                        <a style="z-index:1" class="btn px-3 mt-auto mx-auto" asp-controller="Service" asp-action="Details" asp-route-id="@product.Id">Read More</a>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Service End -->
<!-- Feature Start -->
<div class="container-fluid bg-primary feature pt-5">
    <div class="container pt-5">
        <div class="row g-5">
            <div class="col-lg-6 align-self-center mb-md-5 pb-md-5 wow fadeIn" data-wow-delay="0.3s">
                <div class="btn btn-sm border rounded-pill text-white px-3 mb-3">Why Choose Us</div>
                <h1 class="text-white mb-4">We're Best in Electronic Gates Industry with 10 Years of Experience</h1>
                <p class="text-light mb-4">
                   @Model.company.Mission
                </p>
                <div class="d-flex align-items-center text-white mb-3">
                    <div class="btn-sm-square bg-white text-primary rounded-circle me-3">
                        <i class="fa fa-check"></i>
                    </div>
                    <span>@Model.company.AboutUs</span>
                </div>
                <div class="d-flex align-items-center text-white mb-3">
                    <div class="btn-sm-square bg-white text-primary rounded-circle me-3">
                        <i class="fa fa-check"></i>
                    </div>
                    <span>@Model.company.vision</span>
                </div>
                <div class="d-flex align-items-center text-white mb-3">
                    <div class="btn-sm-square bg-white text-primary rounded-circle me-3">
                        <i class="fa fa-check"></i>
                    </div>
                    <span>@Model.company.Aims  its our aims in Future</span>
                </div>
                <div class="row g-4 pt-3">
                    <div class="col-sm-6">
                        <div class="d-flex rounded p-3" style="background: rgba(256, 256, 256, 0.1);">
                            <i class="fa fa-users fa-3x text-white"></i>
                            <div class="ms-3">
                                <h2 class="text-white mb-0" data-toggle="counter-up">@Model.CountClients</h2>
                                <p class="text-white mb-0">Happy Clients</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="d-flex rounded p-3" style="background: rgba(256, 256, 256, 0.1);">
                            <i class="fa fa-check fa-3x text-white"></i>
                            <div class="ms-3">
                                <h2 class="text-white mb-0" data-toggle="counter-up">@Model.CountProjects</h2>
                                <p class="text-white mb-0">Project Complete</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 align-self-end text-center text-md-end wow fadeIn" data-wow-delay="0.5s">
                <img class="img-fluid" src="img/feature.png" alt="">
            </div>
        </div>
    </div>
</div>
<!-- Feature End -->
<!-- Case Start -->
<div class="container-fluid bg-light py-5">
    <div class="container py-5">
        <div class="mx-auto text-center wow fadeIn" data-wow-delay="0.1s" style="max-width: 500px;">
            <div class="btn btn-sm border rounded-pill text-primary px-3 mb-3">Case Study</div>
            <h1 class="mb-4">Explore Our Recent Smarts</h1>
        </div>
        <div class="row g-4">
            @foreach (var project in Model.projects)
            {
                <div class="col-lg-4 wow fadeIn" data-wow-delay="0.3s">
                    <div class="case-item position-relative overflow-hidden rounded mb-2">
                        <img class="img-fluid" src="@imagth@project.ImageUrl" alt="Smart Citites">
                        <a asp-controller="Project"
                           asp-action="Details"
                           asp-route-id="@project.Id"
                           class="case-overlay text-decoration-none">
                        <small>@project.Name</small>
                        <h5 class="lh-base text-white mb-3">
                            @project.Description
                        </h5>
                        <span class="btn btn-square btn-primary"><i class="fa fa-arrow-right"></i></span>
                    </a>
                </div>
            </div>
            }
           
        </div>
    </div>
</div>
<!-- Case End -->

<!-- Team Start -->
<div class="container-fluid bg-light py-5">
    <div class="container py-5">
        <div class="row g-5 align-items-center">
            <div class="col-lg-5 wow fadeIn" data-wow-delay="0.1s">
                <div class="btn btn-sm border rounded-pill text-primary px-3 mb-3">Our Team</div>
                <h1 class="mb-4">Meet Our Experienced Team Members</h1>
                <p class="mb-4">
                  we care How To make Leaders.....
                </p>
                <a class="btn btn-primary rounded-pill px-4" asp-controller="Team" asp-action="TeamsDetails">Read More</a>
            </div>
            <div class="col-lg-7">
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="row g-4">
                           @foreach (var member in Model.Teams.Take(2))
                            {

                                <div class="col-12 wow fadeIn" data-wow-delay="0.1s">
                                    <div class="team-item bg-white text-center rounded p-4 pt-0">
                                        <img class="img-fluid rounded-circle p-4" src="@imagth@member.ImageUrl" />        <h5 class="mb-0">@member.Name</h5>
                                        <small>@member.JobTitle</small>
                                        <div class="d-flex justify-content-center mt-3">
                                            <a class="btn btn-square btn-primary m-1" href="@member.FaceBookUrl">
                                                <i class="fab fa-facebook-f"></i>
                                            </a>
                                            <a class="btn btn-square btn-primary m-1" href="@member.TwitterUrl">
                                                <i class="fab fa-twitter"></i>
                                            </a>
                                            <a class="btn btn-square btn-primary m-1" href="@member.Instagramurl">
                                                <i class="fab fa-instagram"></i>
                                            </a>
                                            <a class="btn btn-square btn-primary m-1" href="@member.LinkedInUrl">
                                                <i class="fab fa-linkedin-in"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>

                            }


                        </div>
                    </div>
                    <div class="col-md-6 pt-md-4">
                        <div class="row g-4">
                            @foreach (var member in Model.Teams.Skip(2))
                            {
                                <div class="col-12 wow fadeIn" data-wow-delay="0.3s">
                                    <div class="team-item bg-white text-center rounded p-4 pt-0">
                                        <img class="img-fluid rounded-circle p-4" src="@imagth@member.ImageUrl" alt="">
                                        <h5 class="mb-0">@member.Name</h5>
                                        <small>@member.JobTitle</small>
                                        <div class="d-flex justify-content-center mt-3">
                                            <a class="btn btn-square btn-primary m-1" href="@member.FaceBookUrl">
                                                <i class="fab fa-facebook-f"></i>
                                            </a>
                                            <a class="btn btn-square btn-primary m-1" href="@member.TwitterUrl">
                                                <i class="fab fa-twitter"></i>
                                            </a>
                                            <a class="btn btn-square btn-primary m-1" href="@member.Instagramurl">
                                                <i class="fab fa-instagram"></i>
                                            </a>
                                            <a class="btn btn-square btn-primary m-1" href="@member.LinkedInUrl]">
                                                <i class="fab fa-linkedin-in"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Team End -->


<h1 style="text-align:center;color:limegreen">What say Clients</h1>
<div class="carousel-container" >
      @foreach (var client in Model.Clients)
                    {
        if (client.Comments.Count() > 0)
        {
            <div class="carousel-slide">
                <div class="card" style="width: 15rem;">
                    <img class="card-img-top" style="border-radius:50%;width:120px;height120px;" src="@imagth@client.Logo" alt="Card image cap">
                    <div class="card-body" style="text-align:center">
                        <h5 class="card-title">@client.Name</h5>
                        <p class="card-text">@client.Comments.LastOrDefault(x => x.ClientId == @client.Id).Description</p>
                        <p >@client.level</p>
                    </div>
                </div>
            </div>
    }    }


   
</div>


