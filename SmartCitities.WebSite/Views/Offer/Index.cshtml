@model List<New>
@{

    ViewData["Title"] = "Offers";
    string imagth = ViewBag.ImagthPath;
}


@section LeftSide {


                <div class="col-lg-6 align-self-center text-center text-lg-start mb-lg-5">
                    <h1 class="display-4 text-white mb-4 animated slideInRight">Our Offer</h1>
            
               
    </div>
 
}
@if(Model.Count()==0)
{
    <div class="container-fluid" style="background-color:dodgerblue;color:greenyellow;text-align:center">
        <div class="row" style="color:aquamarine">
            <h1 style="color:aquamarine">No Offers Now, Tracks Us</h1>
        </div>

    </div>
}
else
{
@foreach (var news in Model)
{
    
    <div class="container-fluid">
        <div class="row">
            <div style="width:50%;height:400px;">
                <img src="@imagth@news.ImageUrl" style="width:100%;height:500px;" />
            </div>
            <div class="col-lg-4 col-sm-3">
                <video controls style="width:450px;height:300px;">
                    <source src="@imagth@news.LinkUrl" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
            </div>
        </div>
        
        <div class="row" style="text-align:center">
            <div class="col-6">

            </div>
            <div class="col-6">
                <h1>@news.Title</h1>
                <p>@news.Description</p>
            </div>
            
        </div>


    </div>
}
}
