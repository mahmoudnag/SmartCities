@model List<Team>
@{
   
    ViewData["Title"] = "Teams";
    string imagth = ViewBag.ImagthPath;
}
@section LeftSide{



            <div class="col-lg-6 align-self-center text-center text-lg-start mb-lg-5">
                <h1 class="display-4 text-white mb-4 animated slideInRight">Our Team</h1>
                
            </div>



}
<!-- Team Start -->
<div class="container-fluid bg-light py-5">
    <div class="container py-5">
        <div class="row g-5 align-items-center">
            <div class="col-lg-5 wow fadeIn" data-wow-delay="0.1s">
                <div class="btn btn-sm border rounded-pill text-primary px-3 mb-3">Our Team</div>
                <h1 class="mb-4">Meet Our Experienced Team Members</h1>
                <p class="mb-4">
                    text
                </p>
                <a class="btn btn-primary rounded-pill px-4" asp-controller="Team" asp-action="TeamsDetails">Read More</a>
            </div>
            <div class="col-lg-7">
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="row g-4">
                            @foreach (var member in Model.Take(2))
                            {

                                <div class="col-12 wow fadeIn" data-wow-delay="0.1s">
                                    <div class="team-item bg-white text-center rounded p-4 pt-0">
                                        <img class="img-fluid rounded-circle p-4" src="@imagth@member.ImageUrl" />        <h5 class="mb-0">@member.Name</h5>
                                        <small>@member.JobTitle</small>
                                        <div class="d-flex justify-content-center mt-3">
                                            <a class="btn btn-square btn-primary m-1" href="@member.FaceBookUrl">
                                                <i class="fab fa-facebook-f"></i>
                                            </a>
                                            <a class="btn btn-square btn-primary m-1" href="@member.TwitterUrl">
                                                <i class="fab fa-twitter"></i>
                                            </a>
                                            <a class="btn btn-square btn-primary m-1" href="@member.Instagramurl">
                                                <i class="fab fa-instagram"></i>
                                            </a>
                                            <a class="btn btn-square btn-primary m-1" href="@member.LinkedInUrl">
                                                <i class="fab fa-linkedin-in"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>

                            }


                        </div>
                    </div>
                    <div class="col-md-6 pt-md-4">
                        <div class="row g-4">
                            @foreach (var member in Model.Skip(2))
                            {
                                <div class="col-12 wow fadeIn" data-wow-delay="0.3s">
                                    <div class="team-item bg-white text-center rounded p-4 pt-0">
                                        <img class="img-fluid rounded-circle p-4" src="@imagth@member.ImageUrl" alt="">
                                        <h5 class="mb-0">@member.Name</h5>
                                        <small>@member.JobTitle</small>
                                        <div class="d-flex justify-content-center mt-3">
                                            <a class="btn btn-square btn-primary m-1" href="@member.FaceBookUrl">
                                                <i class="fab fa-facebook-f"></i>
                                            </a>
                                            <a class="btn btn-square btn-primary m-1" href="@member.TwitterUrl">
                                                <i class="fab fa-twitter"></i>
                                            </a>
                                            <a class="btn btn-square btn-primary m-1" href="@member.Instagramurl">
                                                <i class="fab fa-instagram"></i>
                                            </a>
                                            <a class="btn btn-square btn-primary m-1" href="@member.LinkedInUrl]">
                                                <i class="fab fa-linkedin-in"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Team End -->